<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    app:layout_anchor="@+id/slide_up"
    android:background="@color/backgroundDark"
    app:layout_behavior=".ui.BottomNavBehavior">

    <ImageButton
        android:id="@+id/nav_1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_supervisor_account_black" />

    <ImageButton
        android:id="@+id/nav_2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_directions_run_black"
        android:tint="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/nav_3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_whatshot_black_24dp" />

</LinearLayout>
