<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <se.studieresan.studs.ui.SlideUpCoordinatorLayout
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/slide_up"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_behavior=".ui.ParallaxBehavior" >

            <FrameLayout
                android:id="@+id/map_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="jeppes.snappy.MapsActivity" />
            </FrameLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/margin_normal"
                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_share_black"
                android:tint="#666"
                app:borderWidth="0dp"
                app:elevation="4dp"
                app:fabSize="normal"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:layout_anchor="@id/fab_share"
                app:layout_anchorGravity="top|center"
                android:layout_gravity="top|center"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/ic_my_location_black"
                android:tint="#666"
                app:borderWidth="0dp"
                app:elevation="4dp"
                app:fabSize="normal"
                />

        </android.support.design.widget.CoordinatorLayout>

        <se.studieresan.studs.ui.SlideupNestedScrollview
            android:id="@id/slide_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:peek_height="?attr/actionBarSize">

            <include layout="@layout/slide_layout"/>

        </se.studieresan.studs.ui.SlideupNestedScrollview>

        <include layout="@layout/navigation_layout"
            android:id="@+id/bottom_nav"/>

    </se.studieresan.studs.ui.SlideUpCoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/studs_dark"
        android:fitsSystemWindows="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop ="@dimen/margin_small"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:text="Secret debug menu"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:alpha="0.05"
                android:layout_gravity="top"
                />

            <se.studieresan.studs.debug.ModelExplorerView
                android:id="@+id/debug"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:alpha="0.05"
                android:layout_gravity="top"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@android:color/white"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_gravity="center_horizontal"
                    />

                <Spinner
                    android:id="@+id/toggle_map_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tooltipText="Theme"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
